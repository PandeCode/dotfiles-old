general {
output_format = "i3bar"
colors = true
color_good = "#50FA7B"
color_degraded = "#F1FA8C"
color_bad = "#FF5555"
}

order += "load"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "volume master"
order += "wireless wlo1"
order += "battery 0"
order += "time"

wireless wlo1 {
format_up = "%quality %essid %bitrate"
format_down = "offline"
}

